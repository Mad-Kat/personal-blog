---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.prose {
				max-width: min(70ch, 90%);
				margin: auto;
			}
			.prose h1 {
				font-size: 2rem;
				/* --font-wght: 500; */
				margin-bottom: 0.5rem;
			}
			.prose time {
				display: block;
				font-size: 0.9em;
				--font-mono: 0.2;
				--font-wght: 200;
				margin-bottom: 3rem;
			}
			.prose :global(p + p) {
				margin-top: 1.25rem;
			}
			.prose :global(h2) {
				font-size: 1.5rem;
				/* --font-wght: 500; */
				margin-top: 3rem;
				margin-bottom: 1rem;
			}
			.prose :global(pre) {
				margin-top: 1rem;
				margin-bottom: 2rem;
			}
			.prose :global(a) {
				display: inline-block;
				padding: 0.1em 0.3em;
				border-radius: 3px;
				background-color: #ffffff;
				outline: 1px solid hsl(31, 10%, 90%);
				text-decoration: none;
				color: black;
				font-size: 20px;
				white-space: nowrap;
			}
			.prose :global(a:hover) {
				/* background-color: hsl(31, 20%, 92%); */
				outline: 1px solid hsl(31, 10%, 70%);
			}
			.prose :global(h3) {
				font-size: 1.25rem;
				/* --font-wght: 500; */
				margin-top: 2rem;
				margin-bottom: 1rem;
			}
			article {
				padding-bottom: 5rem;
				margin-bottom: 5rem;
			}
		</style>
	</head>
	<Header />
	<body>
		<main>
			<article class="prose">
				<h1>{title}</h1>
				<FormattedDate date={pubDate} />
				<slot />
			</article>
		</main>
	</body>
</html>
